#include <iostream>

using namespace std;
int area(int);
int area(int,int);
float area(float);
float area(float,float);

int main()
{
    int s,l,b;
    float r,bs,ht;
    cout<<"Enter a side of a square:";
    cin>>s;
    cout<<"Enter length and breadth of a rectangle:";
    cin>>l>>b;
    cout<<"Enter radius of a circle:";
    cin>>r;
    cout<<"Enter base and height of a triangle:";
    cin>>bs>>ht;
    cout<<"Area of  the square is:"<<area(s);
    cout<<"\nArea of the rectangle is "<<area(l,b);
    cout<<"\nArea of the circle is "<<area(r);
    cout<<"\nArea of the triangle is "<<area(bs,ht);

}
int area(int s)
{
    return(s*s);
}
int area(int l, int b)
{
    return(l*b);
}
float area(float r)
{
    return(3.14*r*r);
}
float area(float bs,float ht)
{
    return((bs*ht)/2);
}
